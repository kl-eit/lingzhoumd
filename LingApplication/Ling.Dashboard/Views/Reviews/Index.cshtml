@model List<Ling.Domains.Entities.Reviews>
@{
    ViewBag.Title = "Ling Zhou, MD | Reviews";
}
@section PageCss{
    <link rel="stylesheet" href="@Url.Content("~/assets/plugins/datatables-bs4/dataTables.bootstrap4.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/assets/plugins/datatables.net-responsive-bs4/responsive.bootstrap4.css")" type="text/css" />
}

<div class="card mb-3">
    <div class="card-body rounded-soft bg-gradient">
        <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
        <div class="row text-white align-items-center no-gutters">
            <div class="col">
                <h4 class="text-white mb-0">FAQ</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <svg height="12px" style="margin-top:-3px;" version="1.1" viewBox="0 0 16 16" width="12px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <path fill="currentColor" d="M15.45,7L14,5.551V2c0-0.55-0.45-1-1-1h-1c-0.55,0-1,0.45-1,1v0.553L9,0.555C8.727,0.297,8.477,0,8,0S7.273,0.297,7,0.555  L0.55,7C0.238,7.325,0,7.562,0,8c0,0.563,0.432,1,1,1h1v6c0,0.55,0.45,1,1,1h3v-5c0-0.55,0.45-1,1-1h2c0.55,0,1,0.45,1,1v5h3  c0.55,0,1-0.45,1-1V9h1c0.568,0,1-0.437,1-1C16,7.562,15.762,7.325,15.45,7z" />



                            </svg>
                            <a href="@Url.Content("~/home")">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Reviews</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        @Html.Partial("_OperationMessage")
    </div>
    <div class="col-md-12">
        <div class="card mb-3">
            <div class="card-header">
                <div class="row align-items-center justify-content-between">
                    <div class="col-6 col-sm-auto d-flex align-items-center pr-0">
                        <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">FAQ</h5>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pt-0">
                <div class="col-12 col-sm-auto ml-auto text-right">
                    <div id="dashboard-actions">
                        <a class="btn btn-ling-default btn-sm" href="@Url.Content("~/reviews/manage")">
                            <i class="fa fa-plus fa-w-14"></i>
                            New
                        </a>
                    </div>
                </div>
                <table class="table table-sm mb-0 table-dashboard fs--1 no-footer dataTable table-striped" id="tablereviews">
                    <thead class="bg-200 text-900">
                        <tr>
                            <th class="hide">ID</th>
                            <th>Reviews</th>
                            <th>Comment</th>
                            <th>Type</th>
                            <th>Active?</th>
                            <th>Created By</th>
                            <th>Created Date</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section PageScript{
    <script src="@Url.Content("~/assets/plugins/datatables/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/datatables-bs4/dataTables.bootstrap4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/datatables.net-responsive/dataTables.responsive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/datatables.net-responsive-bs4/responsive.bootstrap4.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/pages/reviews.js")" type="text/javascript"></script>
}