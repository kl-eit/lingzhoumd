<div class="modal modalImageUpload">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#3c8dbc;color:#fff;">
                <h4 class="modal-title">Image</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="frmImageUpload" action="" method="post">
                    <div class="form-group row file-input-wrapper">
                        <label for="inputEmail3" class="col-md-4 control-label col-form-label text-right">Upload image</label>
                        <div class="col-md-6">
                            <input type="file" name="ImageUpload" id="ImageUpload" class="btn btn-light" data-filename-placement="inside" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnUploadImage" data-style="expand-left" data-plugin="ladda">Upload</button>
                <button type="button" class="btn btn-light close-modal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modalVideoUpload">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#00a65a;color:#fff;">
                <h4 class="modal-title">Video</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form" id="frmVideoUpload" action="" method="post">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-md-4 control-label col-form-label text-right">Upload Video</label>
                        <div class="col-md-6">
                            <input type="file" name="VideoUpload" id="VideoUpload" class="btn btn-light" data-filename-placement="inside" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-md-4 control-label col-form-label text-right">Width</label>
                        <div class="col-md-4" id="dvSearchText">
                            <div class="input-group">
                                <input type="text" class="form-control input-sm col-form-label" placeholder="Width" name="Width" id="Width">
                                <button class="input-group-addon btn btn-light" id="btnWidth" type="submit">PX</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 control-label text-right">Align</label>
                        <div class="col-xs-12 col-md-5">
                            <div class="btn-group" role="group">
                                <button type="button" value="left" class="btn btn-light btnAlign">Left</button>
                                <button type="button" value="none" id="btnAlignMiddle" class="btn btn-light btnAlign">Middle</button>
                                <button type="button" value="right" class="btn btn-light btnAlign">Right</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnUploadVideo" data-style="expand-left" data-plugin="ladda">Upload</button>
                <button type="button" class="btn btn-light close-modal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

