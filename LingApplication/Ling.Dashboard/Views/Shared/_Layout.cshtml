<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/assets/plugins/bootstrap/css/bootstrap.min.css")" type="text/css">
    <link href="@Url.Content("~/assets/plugins/flatpickr/flatpickr.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/theme.css")" />
    <link href="@Url.Content("~/assets/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/css/custom.css")" rel="stylesheet" />
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/favicon_cp.ico")">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <script type="text/javascript">
        var _contentRoot = '@Url.Content("~/")';
    </script>
    @RenderSection("PageCss", false)
</head>
<body class="d-flex flex-column" style="min-height: 100vh">
    <main class="main flex-fill" id="top">
        <div class="container-fluid" data-layout="container">
            @Html.Partial("_SideMenu")
            <div class="content">
                @Html.Partial("_Header")
                <!-- =============================================== -->
                <!-- Content Wrapper. Contains page content -->
                <div id="page-content">
                    @RenderBody()
                </div>
            </div>
            <input type="hidden" id="hdnSelectedMenu" value="@ViewBag.SelectedMenu" />
        </div>
        <!-- /.content-wrapper -->
        @*DELETE POPUP WINDOW CONFIRMATION*@
        <div class="modal" id="globalConfirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="modalDelete" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="modalDelete">Confirmation</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body ml-4">
                        <p>Are you sure you want to delete this record?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light close-modal" data-dismiss="modal">No</button>
                        <a id="btnGlobalDelete" class="btn btn-danger">Yes</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
    @Html.Partial("_Footer")
    <script src="@Url.Content("~/assets/plugins/jQuery/jQuery-2.1.4.min.js")" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/assets/plugins/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/bootstrap-fileinput/bootstrap-fileinput.js")"></script>
    <script src="@Url.Content("~/assets/plugins/stickyfilljs/stickyfill.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/sticky-kit/sticky-kit.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/is_js/is.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/flatpickr/flatpickr.min.js")"></script>
    <script src="@Url.Content("~/assets/js/theme.js")"></script>
    <!-- jquery blockui -->
    <script src="@Url.Content("~/assets/js/jquery.blockUI.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery-ui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/moment.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/custom.js")" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var selectedMenu = '@ViewBag.SelectedMenu';
            $(".nav li.nav-item").removeClass("active");
            $("#li_" + selectedMenu).addClass("active");
            $("#li_" + selectedMenu).parent().addClass('show');
        });

        function ShowBlockUI() {
            $.blockUI({
                message: '<h3 style="margin:10px 0px;"><img class="loading-image-radius" src="@Url.Content("~/assets/images/loader (2).gif")" /></h3>',
                css: {
                    border: 'none',
                    padding: '2px',
                    backgroundColor: 'none',
                    opacity: 1
                }
            });
        }

        function HideBlockUI() {
            $.unblockUI();
        }

    </script>
    @RenderSection("PageScript", false)
</body>
</html>