@model Ling.Domains.ViewModel.DashboardViewModel

@{
    ViewData["Title"] = "Ling Zhou, MD | Dashboard";
}

@section PageCss{
    <link rel="stylesheet" href="@Url.Content("~/assets/plugins/datatables-bs4/dataTables.bootstrap4.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/assets/plugins/datatables.net-responsive-bs4/responsive.bootstrap4.css")" type="text/css" />
}

<div class="card mb-3">
    <div class="card-body rounded-soft bg-gradient">
        <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
        <div class="row text-white align-items-center no-gutters">
            <div class="col">
                <h4 class="text-white mb-0">Welcome @ViewBag.LoginUserName,</h4>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.Partial("_OperationMessage")
    </div>
    <div class="col-md-12">
        <div class="card-deck">
            <div class="card mb-3 overflow-hidden" style="min-width: 12rem">
                <div class="bg-holder bg-card" style="background-image:url(/assets/images/corner-1.png);"></div>
                <!--/.bg-holder-->
                <div class="card-body position-relative">
                    <h6>Total FAQs</h6>
                    <div class="display-4 fs-4 mb-2 font-weight-normal text-sans-serif text-warning"
                         data-countupp="{&quot;count&quot;:58386,&quot;format&quot;:&quot;alphanumeric&quot;}">@Model.TotalFAQ</div>
                        <a class="font-weight-semi-bold fs--1 text-nowrap" href="@Url.Content("/faq")">
                            See all
                            <svg class="svg-inline--fa fa-angle-right fa-w-8 ml-1" data-fa-transform="down-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg="" style="transform-origin: 0.25em 0.5625em;"><g transform="translate(128 256)"><g transform="translate(0, 32)  scale(1, 1)  rotate(0 0 0)"><path fill="currentColor" d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z" transform="translate(-128 -256)"></path></g></g></svg>
                        </a>
                    </div>
                </div>
                <div class="card mb-3 overflow-hidden" style="min-width: 12rem">
                    <div class="bg-holder bg-card" style="background-image:url(/assets/images/corner-2.png);"></div>
                    <!--/.bg-holder-->
                    <div class="card-body position-relative">
                        <h6>Total Blogs</h6>
                        <div class="display-4 fs-4 mb-2 font-weight-normal text-sans-serif text-info"
                             data-countupp="{&quot;count&quot;:23434,&quot;format&quot;:&quot;alphanumeric&quot;}">@Model.TotalBlog</div>
                            <a class="font-weight-semi-bold fs--1 text-nowrap" href="@Url.Content("/blog")">
                                See all<svg class="svg-inline--fa fa-angle-right fa-w-8 ml-1" data-fa-transform="down-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg="" style="transform-origin: 0.25em 0.5625em;"><g transform="translate(128 256)"><g transform="translate(0, 32)  scale(1, 1)  rotate(0 0 0)"><path fill="currentColor" d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z" transform="translate(-128 -256)"></path></g></g></svg>
                            </a>
                        </div>
                    </div>
                    <div class="card mb-3 overflow-hidden" style="min-width: 12rem">
                        <div class="bg-holder bg-card" style="background-image:url(/assets/images/corner-3.png);"></div>
                        <!--/.bg-holder-->
                        <div class="card-body position-relative">
                            <h6>Total Inquiries</h6>
                            <div class="display-4 fs-4 mb-2 font-weight-normal text-sans-serif"
                                 data-countup="{&quot;count&quot;:43594,&quot;format&quot;:&quot;comma&quot;,&quot;prefix&quot;:&quot;$&quot;}">@Model.TotalContactInquiry</div>
                                <a class="font-weight-semi-bold fs--1 text-nowrap" href="#dvInquiries">
                                    See all<svg class="svg-inline--fa fa-angle-right fa-w-8 ml-1" data-fa-transform="down-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg="" style="transform-origin: 0.25em 0.5625em;"><g transform="translate(128 256)"><g transform="translate(0, 32)  scale(1, 1)  rotate(0 0 0)"><path fill="currentColor" d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z" transform="translate(-128 -256)"></path></g></g></svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12" id="dvInquiries">
                    <div class="card mb-3">
                        <div class="card-header">
                            <div class="row align-items-center justify-content-between">
                                <div class="col-6 col-sm-auto d-flex align-items-center pr-0">
                                    <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">Recent Inquiries</h5>
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-0 pt-0">
                            <div class="col-12 col-sm-auto ml-auto text-right custom-component">
                                <div id="dashboard-actions">
                                    @*<a class="btn btn-ling-default btn-sm" href="javascript:void(0);">
                                            <i class="fa fa-filter"></i>
                                            filter
                                        </a>
                                        <a class="btn btn-ling-default btn-sm" href="javascript:void(0);">
                                            <i class="fa fa-file-download"></i>
                                            Export
                                        </a>*@
                                </div>
                            </div>
                            @Html.Partial("_ContactInquiryList", Model.ContactInquiryList)
                        </div>
                    </div>
                </div>
            </div>

<div class="modal" id="viewContactInquiryDetailModal" tabindex="-1" role="dialog" aria-labelledby="modalView" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-gradient">
                <h5 class="modal-title">Message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="word-break: break-word;">
                <div id="dvMessage" class="fs--1"></div>
                <br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light close-modal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section PageScript{
    <script src="@Url.Content("~/assets/plugins/datatables/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/datatables-bs4/dataTables.bootstrap4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/datatables.net-responsive/dataTables.responsive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/plugins/datatables.net-responsive-bs4/responsive.bootstrap4.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/pages/dashboard.js")" type="text/javascript"></script>
}