@model Ling.Domains.Entities.WebSiteSetting

@{
    var title = Model.ID > 0 ? "Ling Zhou, MD | Website Setting - Edit" : "Ling Zhou, MD | Website Setting - Add";
    ViewBag.Title = title;
}
<div class="card mb-3">
    <div class="card-body rounded-soft bg-gradient">
        <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
        <div class="row text-white align-items-center no-gutters">
            <div class="col">
                <h4 class="text-white mb-0">Website Settings</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <i class="fa fa-home"></i>
                            <a href="@Url.Content("~/Home/Index")">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Content("~/WebsiteSetting/Index")">Website Settings</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@(Model.ID > 0 ? "Edit" : "Add")</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_OperationMessage")
    </div>
</div>
<div class="row no-gutters">
    <div class="col-lg-12">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="fs-0 mb-0 text-nowrap py-2 py-xl-0">Manage Website Setting</h5>
            </div>
            <div class="card-body bg-light">
                @using (Html.BeginForm("Manage", "WebsiteSetting", FormMethod.Post, new { id = "frmWebSetting", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(m => m.ID)
                    <div class="form-group row">
                        <label for="Name" class="col-sm-2 col-form-label text-right">Name</label>
                        <div class="col-sm-6">
                            <input type="text" name="Name" id="Name" class="form-control" maxlength="50" value="@Model.Name" placeholder="Name" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Value" class="col-sm-2 col-form-label text-right">Value</label>
                        <div class="col-sm-6">
                            @if (Model.Name == "SiteContactAddress")
                            {
                                <textarea name="Value" id="Value" class="form-control" placeholder="Address">@Model.Value</textarea>
                            }
                            else
                            {
                                <input type="text" name="Value" id="Value" class="form-control" maxlength="255" value="@Model.Value" placeholder="Value" />
                            }
                        </div>
                    </div>
                    <div class="box-footer text-right">
                        <div class="col-xs-12">
                            <a href="@Url.Content("~/WebsiteSetting/Index")" class="btn btn-crowne-cancel btn-sm mr-2">Cancel</a>
                            <button id="btnSave" type="button" class="btn btn-crowne-primary btn-sm">Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section PageScript{
    <script src="@Url.Content("~/assets/plugins/jquery-validation-1.16.0/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/pages/websitesettingmanage.js")"></script>
}